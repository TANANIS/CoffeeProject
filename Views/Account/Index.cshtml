@model List<WebApplication1_1105_TSET_member5.Views.Account.HeaderViewModel>

@{
    ViewData["Title"] = "Index";
}

<style>
    .flexQQ {
        display: flex;
    }
</style>

<h1>訂單查詢</h1>
<hr />

<div class="flexQQ">
    <div>@await Html.PartialAsync("_PartialItem")</div>
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        訂單編號
                    </th>
                    <th>
                        訂單日期
                    </th>
                    <th>
                        付款方式
                    </th>
                    <th>
                        訂單總額
                    </th>
                    <th>
                        訂單狀態
                    </th>
                    <th>
                        出貨狀態
                    </th>
                    <th>
                        購買內容
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.OrderId
                        </td>
                        <td>
                            @item.OrderDate
                        </td>
                        <td>
                            @item.Payment
                        </td>
                        <td>
                            @item.Total
                        </td>
                        <td>
                            @item.OrderStatus
                        </td>
                        <td>
                            @item.ShipStatus
                        </td>
                        <td>
                            @foreach (var detail in item.Orderdetails)
                            {
                                <p>@detail.ProductName</p>
                            }
                        </td>
                        <td><a asp-action="Details" asp-route-id="@item.OrderId">明細</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>